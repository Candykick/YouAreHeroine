<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mpCell"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <!--뭐지뭐지-->

    <LinearLayout
        android:id="@+id/mp_ll_writerNnum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="14dp">

        <TextView
            android:id="@+id/mp_tv_writer"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:fontFamily="@font/iropke"
            android:text="작가명"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mp_tv_novel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/samlip"
                android:text="작품수 24 |"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/mp_tv_zzim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/samlip"
                android:text=" 찜꽁수 7841"
                android:textSize="10dp" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mp_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/samlip"
            android:gravity="right"
            android:text="2020-10-11"
            android:textSize="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>