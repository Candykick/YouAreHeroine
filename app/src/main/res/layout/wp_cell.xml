<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wpCell"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/wp_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/sd_samlip_hopangche_basic"
        android:gravity="right"
        android:text="최근 업로드일\n2020-10-11"
        android:textColor="#2B2B2B"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wp_iv_novel_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iv_novel_title1"

        />

    <ImageView
        android:id="@+id/wp_iv_finish"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/wp_ll_info"
        app:layout_constraintEnd_toStartOf="@+id/wp_ll_info"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/wp_iv_novel_pic"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_ing" />

    <LinearLayout

        android:id="@+id/wp_ll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/wp_iv_novel_pic"
        app:layout_constraintStart_toEndOf="@+id/wp_iv_novel_pic"
        app:layout_constraintTop_toTopOf="@+id/wp_iv_novel_pic"
        app:layout_constraintVertical_bias="0.3">


        <TextView
            android:id="@+id/wp_tv_novel_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggrae_taom"
            android:text="총 14화"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/wp_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/iropkebatang_m"
            android:text="A 시리즈"
            android:textColor="#000000"
            android:textSize="16dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>