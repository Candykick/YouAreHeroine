<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spCell"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:id="@+id/sp_ll_wcz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/sp_tv_watcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/sd_samlip_hopangche_basic"
            android:text="조회수 32401"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/sp_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sd_samlip_hopangche_basic"
            android:text="댓글수 7428"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/sp_tv_zzim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sd_samlip_hopangche_basic"
            android:text="찜꽁수 395"
            android:textSize="11dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sp_iv_novel_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iv_novel_title1" />

    <ImageView
        android:id="@+id/sp_iv_finish"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/sp_ll_info"
        app:layout_constraintEnd_toStartOf="@+id/sp_ll_info"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/sp_iv_novel_pic"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_ing" />

    <LinearLayout
        android:id="@+id/sp_ll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/sp_iv_novel_pic"
        app:layout_constraintStart_toEndOf="@+id/sp_iv_novel_pic"
        app:layout_constraintTop_toTopOf="@+id/sp_iv_novel_pic">

        <LinearLayout
            android:id="@+id/sp_ll_writNum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sp_tv_writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:fontFamily="@font/sd_samlip_hopangche_basic"
                android:text="작가 "
                android:textSize="11dp" />

            <TextView
                android:id="@+id/sp_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/sd_samlip_hopangche_basic"
                android:text="| 총 14화"
                android:textSize="11dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/sp_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iropkebatang_m"
            android:text="A 시리즈"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/sp_tv_hash_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/sd_samlip_hopangche_basic"
            android:text="#검색한 #키워드만 #표시하나요 #다 #표시하나요"
            android:textSize="11dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>