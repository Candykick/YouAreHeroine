<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/finish_container"
    android:layout_width="match_parent"
    android:layout_height="80dp">


    <ImageView
        android:id="@+id/finish_iv_novel_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:id="@+id/finish_ll_titleNnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/finish_iv_novel_pic"
        app:layout_constraintStart_toEndOf="@+id/finish_iv_novel_pic"
        app:layout_constraintTop_toTopOf="@+id/finish_iv_novel_pic">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/finish_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:fontFamily="@font/iropke"
                android:text="작가 "
                android:textColor="#000000"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/finish_tv_episode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/iropke"
                android:text="| 총 14화"
                android:textColor="#000000"
                android:textSize="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/finish_tv_title"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:fontFamily="@font/iropke"
                android:text="A 시리즈"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/finish_tv_hash_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iropke"
            android:text="#검색한 #키워드만 #표시하나요 #다 #표시하나요"
            android:textColor="#000000"
            android:textSize="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rank_ll_titleNnum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.434">

        <TextView
            android:id="@+id/finish_tv_watcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/samlip"
            android:text="조회수 3333"
            android:textColor="#000000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/finish_tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/samlip"
            android:text="댓글수 3333"
            android:textColor="#000000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/finish_tv_zzim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/samlip"
            android:text="찜꽁수 3333"
            android:textColor="#000000"
            android:textSize="10dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/finish_iv_isEnd"
        android:layout_width="15dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/finish_iv_novel_pic"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_name" />


</androidx.constraintlayout.widget.ConstraintLayout>
